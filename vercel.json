{
  "version": 2,
  "installCommand": "pnpm install",
  "buildCommand": "pnpm --filter @padel-bot/shared build && pnpm --filter @padel-bot/frontend build && pnpm --filter @padel-bot/backend build",
  "outputDirectory": "packages/frontend/dist",
  "builds": [
    {
      "src": "packages/backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/packages/backend/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}